##########################################################################
# This file is centrally managed, any manual changes will be OVERWRITTEN #
##########################################################################
/var/log/cron
/var/log/maillog
/var/log/messages
/var/log/secure
/var/log/spooler
{
    sharedscripts
    daily
    missingok
    rotate 7
    compress
    notifempty
    copytruncate
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}

