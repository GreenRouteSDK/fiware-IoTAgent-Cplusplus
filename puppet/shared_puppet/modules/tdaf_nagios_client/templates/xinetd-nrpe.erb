service nrpe
{
	flags           = REUSE
	type            = UNLISTED
	port            = <%= @nrpe_port %>
	socket_type     = stream
	wait            = no
	user            = nagios
	group           = nagios
	server          = /usr/sbin/nrpe
	server_args     = -c /etc/nagios/nrpe.cfg --inetd
	log_on_failure  += USERID
	disable         = no
	only_from       = 127.0.0.1 <%= @tdaf_nagios_clients_ips %>
}

